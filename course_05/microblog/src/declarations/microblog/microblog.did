type Time = int;
type Message = 
 record {
   author: opt text;
   content: text;
   timestamp: int;
 };
service : {
  follow: (text, principal) -> ();
  follows: () -> (vec principal) query;
  get_name: () -> (opt text) query;
  post: (text, text) -> ();
  posts: (Time) -> (vec Message) query;
  set_name: (text, text) -> () oneway;
  timeline: (Time) -> (vec Message);
}
